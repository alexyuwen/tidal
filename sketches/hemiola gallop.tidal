-- hemiola gallop
let
rhythmPat = fast (32 / 6) $ gain "[1.2 . 1 . ~ 1] | [1.2 . ~ 1 . 1]" # s "hc"
bassPat = fast (32 / 6) $ n (scale "minor" "[0 ~ ~] | [0 ~ -3]") # octave 2 # legato 0.9 # s "organTonewheel1" # gain 1.6
x = stack [rhythmPat, bassPat]
in do
  setcps 0.3
  setCycle 0
  d1 $ "cp"
  d2 $ x