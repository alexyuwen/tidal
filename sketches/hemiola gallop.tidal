-- hemiola gallop
let
rhythmPat = fast (32 / 6) $ gain ("[1.2 . 1 . ~ 1] | [1.2 . ~ 1 . 1]" * 0.6) # s "hc" # vowel "o"
bassPat = fast (32 / 6) $ n (scale "minor" "[0 ~ ~] | [~ 0 ~]") # octave 2 # legato 0.9 # s "organTonewheel1" # gain 1.2
x = stack [rhythmPat, bassPat]
in do
  setcps 0.3
  setCycle 0
  d1 $ s "bskick:0" # speed 1.2 # gain 1
  d2 $ x
